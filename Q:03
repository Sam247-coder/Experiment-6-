#include <stdio.h>
#include <string.h>

struct student {
    int roll_no;
    char fname[20];
    char lname[20];
};

int main() {
    struct student s[5], temp;
    int i, j;

   
    printf("Enter details of 5 students:\n");
    for(i = 0; i < 5; i++) {
        printf("\nStudent %d\n", i+1);
        printf("Enter Roll Number: ");
        scanf("%d", &s[i].roll_no);

        printf("Enter First Name: ");
        scanf("%s", s[i].fname);

        printf("Enter Last Name: ");
        scanf("%s", s[i].lname);
    }


    for(i = 0; i < 5 - 1; i++) {
        for(j = 0; j < 5 - i - 1; j++) {
            if(s[j].roll_no > s[j+1].roll_no) {
                temp = s[j];
                s[j] = s[j+1];
                s[j+1] = temp;
            }
        }
    }

    
    printf("\n--- Students Sorted by Roll Number ---\n");
    for(i = 0; i < 5; i++) {
        printf("%d\t%s\t%s\n", s[i].roll_no, s[i].fname, s[i].lname);
    }

    return 0;
}
