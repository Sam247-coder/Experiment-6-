/* 1.	Create a Book structure containing book_id, title, author name and price. Write a C program to pass a structure as a function argument and print the book details. */

#include <stdio.h>

// Define structure
struct Book {
    int book_id;
    char title[50];
    char author[50];
    float price;
};

// Function declaration
void displayBook(struct Book b);

int main() {
    struct Book b1;

    // Taking input from user
    printf("Enter Book ID: ");
    scanf("%d", &b1.book_id);

    printf("Enter Book Title: ");
    scanf(" %[^\n]", b1.title);   // to read string with spaces

    printf("Enter Author Name: ");
    scanf(" %[^\n]", b1.author);

    printf("Enter Book Price: ");
    scanf("%f", &b1.price);

    // Passing structure to function
    displayBook(b1);

    return 0;
}

// Function definition
void displayBook(struct Book b) {
    printf("\n--- Book Details ---\n");
    printf("Book ID: %d\n", b.book_id);
    printf("Title: %s\n", b.title);
    printf("Author: %s\n", b.author);
    printf("Price: %.2f\n", b.price);
}
