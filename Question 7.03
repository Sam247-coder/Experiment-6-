/* .	Write a function that accepts pointers as parameters. Pass variables by reference using pointers and modify their values within the function. */
#include <stdio.h>

// Function that accepts pointers and modifies the values
void modifyValues(int *x, float *y, char *z) {
    *x = *x + 10;     // modify integer value
    *y = *y * 2;      // modify float value
    *z = 'Z';         // modify char value
}

int main() {
    int a = 5;
    float b = 3.5;
    char c = 'A';

    printf("Before Function Call:\n");
    printf("a = %d\n", a);
    printf("b = %.2f\n", b);
    printf("c = %c\n\n", c);

    // Pass variables by reference (using pointers)
    modifyValues(&a, &b, &c);

    printf("After Function Call:\n");
    printf("a = %d\n", a);
    printf("b = %.2f\n", b);
    printf("c = %c\n", c);

    return 0;
}
